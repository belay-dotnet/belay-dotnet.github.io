<Project>
  <PropertyGroup>
    <!-- Disable all analyzers for documentation generation -->
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <RunStyleCopAnalyzers>false</RunStyleCopAnalyzers>
    <EnableNETAnalyzers>false</EnableNETAnalyzers>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <WarningsNotAsErrors />
    
    <!-- Suppress all StyleCop and documentation warnings -->
    <NoWarn>1570;1571;1572;1573;1574;1580;1581;1584;1587;1589;1590;1591;CS1591;SA1500;SA1201;SA1203;SA1117;SA1611;SA1651;SA1649</NoWarn>
    
    <!-- Generate XML documentation for DocFX -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
</Project>